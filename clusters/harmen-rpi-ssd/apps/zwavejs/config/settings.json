{
  "ui": {
    "port": 8091,
    "host": "0.0.0.0",
    "useHttps": false
  },
  "mqtt": {
    "host": "mqtt://mosquitto.home.lan",
    "port": 1883,
    "prefix": "zwavejs"
  },
  "gateway": {
    "authEnabled": false,
    "nodeNames": true,
    "hassDiscovery": true,
    "discoveryPrefix": "homeassistant",
    "logEnabled": true,
    "logLevel": "debug",
    "logToFile": false
  },
  "backup": {
    "storeBackup": true,
    "storeCron": "0 0 * * *",
    "storeKeep": 7,
    "nvmBackup": true,
    "nvmBackupOnEvent": true,
    "nvmCron": "0 0 * * *",
    "nvmKeep": 7
  },
  "zwave": {
    "enabled": true,
    "port": "/dev/zwave",
    "enableStatistics": false,
    "serverEnabled": true,
    "serverPort": 3000,
  }
  
}